<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置一个黑色边框 -->
    <stroke android:width="2px" android:color="#000000"/>

    <!-- 渐变 -->
    <gradient
        android:angle="270"
        android:startColor="#FCD209"
        android:endColor="#C0C0C0"/>

    <!-- 设置边距 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>

</shape>
